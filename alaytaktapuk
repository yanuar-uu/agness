<script>
  const message = `makasih sudah keren bisa lewatin banyak ABC yang aku belom tentu isa sekuat km. makasi kemarin sudah mau berproses, progresnyaa kudu lebih. gaole terpuruk trus. lihat track recordmu bangga loh aku sm km<3.`;

  const messageEl = document.getElementById('loveMessage');
  const button = document.getElementById('revealBtn');

  button.addEventListener('click', () => {
    messageEl.textContent = message;
    messageEl.classList.add('visible');
    button.disabled = true;
    button.style.cursor = 'default';
  });
</script>
